<Window x:Class="Project1_BatchRename.RemovePatternDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_BatchRename"
        mc:Ignorable="d"
        Title="RemovePatternDialog" Height="250" Width="400">
    <StackPanel Orientation="Vertical">
        <Label FontWeight="Bold" FontSize="20" HorizontalAlignment="Center">Remove Pattern</Label>
        <TextBlock FontSize="14" Margin="10,0,0,0">Fill your "Remove Pattern":</TextBlock>
        <StackPanel Orientation="Horizontal" Margin="10,40,0,0">
            <TextBlock>Pattern:</TextBlock>
            <TextBox Name="fromTb" Width="200" BorderBrush="Black" BorderThickness="1" Margin="30,0,0,0" TextChanged="DataChange"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="160,50,0,0">
            <Button Width="80" Height="25" Margin="0,0,30,0" BorderBrush="Blue" Name="okBtn" Click="okBtn_Click">OK</Button>
            <Button Width="80" Height="25" Name="cancelBtn" Click="cancelBtn_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
