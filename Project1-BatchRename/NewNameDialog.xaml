<Window x:Class="Project1_BatchRename.NewNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_BatchRename"
        mc:Ignorable="d"
        Title="NewNameDialog" Height="250" Width="400">
    <StackPanel Orientation="Vertical">
        <Label FontWeight="Bold" FontSize="20" HorizontalAlignment="Center">New Name</Label>
        <TextBlock FontSize="14"  Margin="10,0,0,0">What is the New Name feature like?</TextBlock>
        <TextBlock Margin="10,15,0,0">- In other words, this is a unique series name.</TextBlock>
        <TextBlock Margin="10,15,0,0">- Used to save file to Database</TextBlock>
        <StackPanel Orientation="Horizontal" Margin="160,40,0,0">
            <Button Width="80" Height="25" Margin="0,0,30,0" BorderBrush="Blue" Name="okBtn" Click="okBtn_Click">OK</Button>
            <Button Width="80" Height="25" Name="cancelBtn" Click="cancelBtn_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
