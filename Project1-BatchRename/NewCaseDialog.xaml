<Window x:Class="Project1_BatchRename.NewCaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_BatchRename"
        mc:Ignorable="d"
         Title="NewCaseDialog" Height="250" Width="400">
    <StackPanel Orientation="Vertical">
        <Label FontWeight="Bold" FontSize="20" HorizontalAlignment="Center">New Case</Label>
        <TextBlock FontSize="14"  Margin="10,0,0,0">Choose your new case's type:</TextBlock>
        <RadioButton GroupName="newcase_rdbtn" Name="allcharupper" Margin="10,5,0,0" IsChecked="True" Click="ChangeTypeNewCase">All char upper</RadioButton>
        <RadioButton GroupName="newcase_rdbtn" Name="allcharlower" Margin="10,5,0,0" Click="ChangeTypeNewCase">All char lower</RadioButton>
        <RadioButton GroupName="newcase_rdbtn" Name="firstcharupper" Margin="10,5,0,0" Click="ChangeTypeNewCase">First char upper</RadioButton>
        <StackPanel Orientation="Horizontal" Margin="160,50,0,0">
            <Button Width="80" Height="25" Margin="0,0,30,0" BorderBrush="Blue" Name="okBtn" Click="okBtn_Click">OK</Button>
            <Button Width="80" Height="25" Name="cancelBtn" Click="cancelBtn_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
