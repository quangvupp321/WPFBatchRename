<Window x:Class="Project1_BatchRename.SaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_BatchRename"
        mc:Ignorable="d"
        Title="SaveDialog" Height="150" Width="300">
    <StackPanel>
        <Label FontWeight="Bold" FontSize="18" HorizontalAlignment="Center">Save Preset</Label>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5,0,10,0">Input preset save name:</TextBlock>
            <TextBox Width="140" x:Name="key"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="80,30,0,0">
            <Button Width="80" Height="25" Margin="0,0,30,0" BorderBrush="Blue" Name="okBtn" Click="okBtn_Click">OK</Button>
            <Button Width="80" Height="25" Name="cancelBtn" Click="cancelBtn_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
